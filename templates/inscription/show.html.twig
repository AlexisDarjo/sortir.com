{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<section class="hero is-fullheight">
    <div class="mt-6 mb-1">
        <div class="container">
            <div class="is-centered is-flex is-justify-content-center">
                <div class="column is-5-tablet is-4-desktop is-6-widescreen">
                    <div  class="box custom-form">
                        <h1 class="title is-3 mb-3 font-weight has-text-white is-flex is-justify-content-center">Liste des participants</h1>


                        <table class="table is-fullwidth custom-table">

                            <tbody>


                                <tr>
                                    <th>Pseudo</th>
                                    <th>Nom</th>

                                </tr>
                                {% for inscription in inscriptions %}
                                <tr>
                                    <td>{{ inscription.idParticipant.pseudo }}</td>
                                    <td>{{ inscription.idParticipant.prenom }} {{ inscription.idParticipant.nom }}</td>
                                </tr>
                            {% endfor %}


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

                        </table>




{% endblock %}
