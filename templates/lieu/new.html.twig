{% extends 'base.html.twig' %}

{% block title %}New Lieu{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form._token) }}

    <section class="hero is-fullheight">
        <div class="mt-6 mb-1">
            <div class="container">
                <div class="is-centered is-flex is-justify-content-center">
                    <div class="column is-5-tablet is-4-desktop is-6-widescreen">
                        <div  class="box custom-form">
                            <h1 class="title is-3 mb-3 font-weight has-text-white is-flex is-justify-content-center">Créer une sortie</h1>

                                    <div class="field">
                                        <div class="control has-icons-left">
                                            {{ form_row(form.nom) }}
                                        </div>
                                    </div>
                                    <div class="field">
                                        {{ form_row(form.rue) }}
                                    </div>
                                    <div class="field">
                                        {{ form_row(form.ville) }}
                                    </div>
                                    <div class="field">
                                        {{ form_row(form.latitude) }}
                                    </div>
                                    <div class="field">
                                        {{ form_row(form.longitude)}}
                                    </div>



                            <div class="field is-flex is-justify-content-center">
                                <button class="m-1" type="submit">
                                    <span>Création</span>
                                </button>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    {{ form_end(form) }}
{% endblock %}
