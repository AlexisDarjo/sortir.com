{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet" href="/assets/styles/profil.css">
        {% endblock %}
{% block body %}
    <div class="is-flex is-justify-content-center is-align-self-center">
        <table class="table  custom-table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ participant.id }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{ participant.pseudo }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ participant.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ participant.prenom }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ participant.telephone }}</td>
                </tr>
                <tr>
                    <th>Mail</th>
                    <td>{{ participant.mail }}</td>
                </tr>
                <tr>
                    <th>Administrateur</th>
                    <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Actif</th>
                    <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <td>
                        <button onclick="window.location='{{ path('app_participant_edit', {'id': participant.id}) }}'">
                            <span>Editer</span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
