{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet" href="/assets/styles/profil.css">
        {% endblock %}
{% block body %}

<section class="hero">
    <div class="mt-6 mb-1">
        <div class="container">
            <div class="is-centered is-flex is-justify-content-center">
                <div class="column is-5-tablet is-4-desktop is-6-widescreen">
                    <div  class="box custom-form">

                        <h1 class="title is-3 mb-3 font-weight has-text-white is-flex is-justify-content-center">Mon profil</h1>

                        <table class="table custom-table is-flex is-justify-content-center">
                            <tbody>

                                <tr>
                                    <th>Nom</th>
                                    <td>{{ participant.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ participant.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Pseudo</th>
                                    <td>{{ participant.pseudo }}</td>
                                </tr>
                                <tr>
                                    <th>Telephone</th>
                                    <td>{{ participant.telephone }}</td>
                                </tr>
                                <tr>
                                    <th>Mail</th>
                                    <td>{{ participant.mail }}</td>
                                </tr>
                                <tr>
                                    <th>Site de rattachement</th>
                                    <td>{{ participant.site.nom is not empty ? participant.site.nom : 'aucun' }}</td>
                                </tr>
                                <tr>
                                    <th>Administrateur</th>
                                    <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                                </tr>
                                <tr>
                                    <th>Actif</th>
                                    <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                                </tr>

                            </tbody>
                        </table>


                        <div class="field is-flex is-justify-content-center is-align-items-center">
                            <button onclick="window.location='{{ path('app_participant_edit', {'id': participant.id}) }}'">
                                <span>Modifier</span>
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
{% endblock %}
