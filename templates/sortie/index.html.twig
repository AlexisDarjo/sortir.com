{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/styles/tableAccueil.css">
{% endblock %}

{% block body %}
    <h1>Sortie index</h1>

    <div class="container">
    <table class="table is-fullwidth custom-table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>{{ sortie.duree }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                    <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun sorties trouvée </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <button>Créer une sortie<a href="{{ path('app_sortie_new') }}"></a></button>

{% endblock %}
