{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/styles/tableAccueil.css">
{% endblock %}

{% block body %}

    <div class="container">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.siteOrganisateur, {'label': 'Site organisateur'}) }}
            {{ form_row(form.dateHeureDebut, {'label': 'Entre'}) }}
            {{ form_row(form.dateHeureFin, {'label': 'Et'}) }}
            {{ form_row(form.nbInscriptionsMax, {'label': 'Nombre d\'inscriptions maximum'}) }}
            {{ form_row(form.infosSortie, {'label': 'Informations sur la sortie'}) }}
            {{ form_row(form.etat, {'label': 'État'}) }}
            {{ form_row(form.lieu, {'label': 'Lieu'}) }}

        </div>
        <button type="submit" class="btn btn-primary">Filtrer</button>
        {{ form_end(form) }}

    <table class="table is-fullwidth custom-table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>{{ sortie.duree }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                    <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun sorties trouvée </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>


    {% if app.user is not empty %}
        <button onclick="window.location='{{ path('app_sortie_new') }}'">
            <span>Créer une sortie</span>
        </button>

    {% endif %}

{% endblock %}
