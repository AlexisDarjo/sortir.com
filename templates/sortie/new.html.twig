{% extends 'base.html.twig' %}

{% block title %}Nouvelle Sortie{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/styles/boutton.css">
    <link rel="stylesheet" href="/assets/styles/login.css">
{% endblock %}

{% block javascripts %}
    {% block importmap %}{{ importmap('boutton') }}{{ importmap('app') }}{% endblock %}
{% endblock %}




{% block body %}

    <section class="hero is-fullheight">
        <div class="mt-6 mb-1">
            <div class="container">
                <div class="is-centered is-flex is-justify-content-center">
                    <div class="column is-5-tablet is-4-desktop is-6-widescreen">

                        <form method="post"  class="box custom-form">
                            <h1 class="title is-3 mb-3 font-weight has-text-white is-flex is-justify-content-center">Cr√©er une sortie</h1>
                            <div class="columns">
                                <div class="column">
                                    <div class="field">
                                        <div class="control has-icons-left">
                                            {{ form_row(form.nom) }}
                                        </div>
                                    </div>
                                    <div class="field">
                                    {{ form_row(form.dateHeureDebut) }}
                                    </div>
                                    <div class="field">
                                    {{ form_row(form.dateLimiteInscription) }}
                                    </div>
                                    <div class="field">
                                    {{ form_row(form.nbInscriptionsMax) }}
                                    </div>

                                    <div class="field">
                                    {{ form_row(form.duree)}}
                                    </div>
                                    <div class="field">
                                    {{ form_row(form.infosSortie) }}
                                    </div>
                                </div>

                                <div class="column">
                                    <div class="field">
                                    {{ form_row(form.siteOrganisateur) }}
                                    </div>
                                    <div class="field">
                                    {{ form_row(form.lieu) }}
                                    </div>
                                </div>
                            </div>

                            <div class="field is-flex is-justify-content-center">
                            <button class="" type="submit">
                                <span>Enregistrer</span>
                            </button>
                            </div>



                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
